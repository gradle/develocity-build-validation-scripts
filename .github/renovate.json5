{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "github>gradle/renovate-agent//presets/dv-automerge-minor.json5",
    ":disableDependencyDashboard"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["components/scripts/lib/gradle\\.sh"],
      "matchStrings": [
        "develocity-plugin\\.version=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "com.gradle:develocity-gradle-plugin",
      "datasourceTemplate": "maven",
      "registryUrlTemplate": "https://plugins.gradle.org/m2"
    },
    {
      "customType": "regex",
      "fileMatch": ["components/scripts/lib/gradle\\.sh"],
      "matchStrings": [
        "ccud-plugin\\.version=\"(?<currentValue>[^\"]+)\""
      ],
      "depNameTemplate": "com.gradle:common-custom-user-data-gradle-plugin",
      "datasourceTemplate": "maven",
      "registryUrlTemplate": "https://plugins.gradle.org/m2"
    }
  ],
  "packageRules": [
    {
      "matchManagers": ["gradle-wrapper"],
      "groupName": "Gradle wrapper"
    },
    {
      // Include regex manager to pick up custom version matches from gradle.sh
      "matchManagers": ["gradle", "regex"],
      "groupName": "Gradle dependencies"
    },
    {
      "matchManagers": ["maven"],
      "groupName": "Maven dependencies"
    },
    {
      "matchManagers": ["github-actions"],
      "groupName": "GitHub Actions"
    },
    {
      "matchPackageNames": ["com.gradle:gradle-enterprise-maven-extension"],
      "matchUpdateTypes": ["major", "minor"],
      "enabled": false
    }
  ]
}
